{% extends 'layout.html.twig' %}

{% trans_default_domain 'application' %}
{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>{{ 'category_list.title'|trans }}</h1>
                <div id="cards" class="d-inline-flex flex-wrap justify-content-center">
                    {% for category in categories %}
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ category.name }}</h5>
                                <h6 class="card-subtitle">{{ category.posts|length }} figures</h6>
                                <p class="card-text">{{ category.description }}</p>
                            </div>
                            <div class="footer text-center">
                                <a href="{{ path('ood_blog_post_category', {'slug': category.slug} ) }}">
                                    <i class="fa fa-eye"></i>
                                </a>
                            </div>
                            {% if is_granted('ROLE_BLOGGER') %}
                                <div class="actions">
                                    <a href="{{ path('ood_blog_category_edit', {'slug': category.slug} ) }}">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                    {% if is_granted('ROLE_BLOGGER') %}
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title">
                                    UN GROUPE DE FIGURES MANQUANT ?
                                </div>
                                <div class="card-text">
                                    Ajoutez-en un nouveau...
                                </div>
                            </div>
                            <div class="footer text-center">
                                <a href="{{ path('ood_blog_category_new') }}"><i
                                            class="fa fa-plus"></i></a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock main %}

{% block title %}{{ 'category_list.page_title'|trans }}{% endblock title %}
{% block page %}groups{% endblock page %}
