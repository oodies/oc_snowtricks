{% trans_default_domain 'application' %}

<!-- Comments -->
{% if thread %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <h4>{{ thread.numberOfComment }} {{ 'comments.title'|transchoice(thread.numberOfComment) }}</h4>
                <hr class="mb-4">
                {% for comment in comments %}
                    <div id="comment_{{ comment.idComment }}" class="comment mb-4">
                        <div class="d-flex w-100">
                            <h6 class="mr-2">{{ comment.author.username }}</h6>
                            <small class="text-muted">{{ comment.updateAt|date }}</small>
                        </div>
                        <p id="comment_body_{{ comment.idComment }}" class="my-0">
                            {{ comment.body }}
                        </p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% else %}
    <h4>{{ 'comments.unknown'|trans }}</h4>
{% endif %}
