{% trans_default_domain 'application' %}
{% set myRoute = app.request.get('_route') %}
<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
    <a class="navbar-brand" href="{{ path('ood_blog_post_list') }}">{{ 'menu.brand'|trans|upper }}</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            {# Link user management #}
            <li class="nav-item {% if ('ood_user_management_list' == myRoute) %}active{% endif %}">
                <a class="nav-link" href="{{ path('ood_user_management_list') }}">{{ 'menu_admin.users'|trans }}</a>
            </li>
            {# Link comment management #}
            <li class="nav-item {% if ('ood_comment_management_list' == myRoute) %}active{% endif %}">
                <a class="nav-link"
                   href="{{ path('ood_comment_management_list') }}">{{ 'menu_admin.comments'|trans }}</a>
            </li>
        </ul>
    </div>
</nav>
